<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 250" width="400" height="250">
  <rect width="400" height="250" fill="#fff8e1"/>
  
  <!-- Mail pieces -->
  <rect x="50" y="60" width="60" height="40" fill="white" stroke="#004c97" stroke-width="2" rx="3"/>
  <text x="80" y="75" font-family="Arial, sans-serif" font-size="8" fill="#004c97" text-anchor="middle">SALE</text>
  <text x="80" y="88" font-family="Arial, sans-serif" font-size="8" fill="#004c97" text-anchor="middle">50% OFF</text>
  
  <rect x="130" y="60" width="60" height="40" fill="white" stroke="#004c97" stroke-width="2" rx="3"/>
  <text x="160" y="75" font-family="Arial, sans-serif" font-size="8" fill="#004c97" text-anchor="middle">NEW</text>
  <text x="160" y="88" font-family="Arial, sans-serif" font-size="8" fill="#004c97" text-anchor="middle">STORE</text>
  
  <rect x="210" y="60" width="60" height="40" fill="white" stroke="#004c97" stroke-width="2" rx="3"/>
  <text x="240" y="75" font-family="Arial, sans-serif" font-size="8" fill="#004c97" text-anchor="middle">EVENT</text>
  <text x="240" y="88" font-family="Arial, sans-serif" font-size="8" fill="#004c97" text-anchor="middle">INVITE</text>
  
  <rect x="290" y="60" width="60" height="40" fill="white" stroke="#004c97" stroke-width="2" rx="3"/>
  <text x="320" y="75" font-family="Arial, sans-serif" font-size="8" fill="#004c97" text-anchor="middle">MENU</text>
  <text x="320" y="88" font-family="Arial, sans-serif" font-size="8" fill="#004c97" text-anchor="middle">SPECIAL</text>
  
  <!-- Houses representing delivery -->
  <rect x="80" y="130" width="20" height="15" fill="#004c97"/>
  <polygon points="80,130 90,120 100,130" fill="#cc0000"/>
  
  <rect x="140" y="130" width="20" height="15" fill="#004c97"/>
  <polygon points="140,130 150,120 160,130" fill="#cc0000"/>
  
  <rect x="200" y="130" width="20" height="15" fill="#004c97"/>
  <polygon points="200,130 210,120 220,130" fill="#cc0000"/>
  
  <rect x="260" y="130" width="20" height="15" fill="#004c97"/>
  <polygon points="260,130 270,120 280,130" fill="#cc0000"/>
  
  <rect x="320" y="130" width="20" height="15" fill="#004c97"/>
  <polygon points="320,130 330,120 340,130" fill="#cc0000"/>
  
  <!-- Arrows showing delivery -->
  <path d="M 80 110 L 90 125" stroke="#0073e6" stroke-width="2" marker-end="url(#arrow)"/>
  <path d="M 160 110 L 150 125" stroke="#0073e6" stroke-width="2" marker-end="url(#arrow)"/>
  <path d="M 240 110 L 210 125" stroke="#0073e6" stroke-width="2" marker-end="url(#arrow)"/>
  <path d="M 320 110 L 270 125" stroke="#0073e6" stroke-width="2" marker-end="url(#arrow)"/>
  
  <defs>
    <marker id="arrow" markerWidth="10" markerHeight="7" refX="9" refY="3.5" orient="auto">
      <polygon points="0 0, 10 3.5, 0 7" fill="#0073e6"/>
    </marker>
  </defs>
  
  <text x="200" y="180" font-family="Arial, sans-serif" font-size="16" font-weight="bold" fill="#004c97" text-anchor="middle">Every Door Direct Mail</text>
  <text x="200" y="200" font-family="Arial, sans-serif" font-size="12" fill="#666" text-anchor="middle">Reach every door on selected routes</text>
  <text x="200" y="220" font-family="Arial, sans-serif" font-size="10" fill="#666" text-anchor="middle">No mailing lists required</text>
</svg>
